<!--bottom naviagation -->
    <style name="CustomBottomNav" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <!-- Background color -->
        <item name="android:background">@color/gray200</item>


        <!-- Item icon tint color -->
